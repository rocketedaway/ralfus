# Linear OAuth app credentials
# Found at: https://linear.app/settings/api/applications
LINEAR_CLIENT_ID=
LINEAR_CLIENT_SECRET=

# The full URL of your /oauth/callback endpoint
# e.g. https://ralfus.fly.dev/oauth/callback
LINEAR_REDIRECT_URI=

# Webhook signing secret from your Linear OAuth app settings
LINEAR_WEBHOOK_SECRET=

# libSQL / Turso database
# Local file (default, no auth token needed): file:data/ralfus.db
# Turso hosted:                               libsql://<db-name>.turso.io
LIBSQL_URL=file:data/ralfus.db
LIBSQL_AUTH_TOKEN=

PORT=3000

# GitHub credentials for gh CLI
GITHUB_TOKEN=              # Personal access token with repo scope
GITHUB_REPO_URL=           # e.g. https://github.com/org/repo
GITHUB_WEBHOOK_SECRET=     # Webhook secret for GitHub webhook authentication

# Cursor Agent CLI
CURSOR_API_KEY=            # API key for cursor-agent authentication

# Agent worker settings
WORK_DIR=/tmp/ralfus-work  # Local directory for per-ticket repo checkouts
AGENT_CONCURRENCY=2        # Number of concurrent planning jobs (p-queue)
